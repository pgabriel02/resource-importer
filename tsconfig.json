{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"allowSyntheticDefaultImports": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"plugins": [
			{
				"name": "axios",
			},
			{
				"name": "meta-fetcher"
			},
			{
				"name": "path"
			},
			{
				"name": "slugify"
			}
		],
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"sourceMap": true,
		"allowJs": true,
		"checkJs": true,
		"declaration": true,
		"declarationDir": "dist/types"
	},
	"include": [
		"src/utils/**/*"
	],
	"exclude": ["node_modules", "**/node_modules/*", "eslint.config.js", "dist"]
}
